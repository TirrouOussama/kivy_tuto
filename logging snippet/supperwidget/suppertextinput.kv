
<SupperTextinput>:

	color: 0, 0, 0, 1
	hint_text_color: 0, 0, 0, 1
	background_color: 0, 0, 0, 0
	foreground_color: (1, 1, 1, 1)
	halign: "center"
	valign: "middle"
	padding_y: [(self.size[1] - self.font_size)/4,(self.size[1] - self.font_size)/4 ]

	multiline: False
	readonly: False	
	on_focus: self.focused_anim(self.size, self.pos)
	canvas.before:
		Color: 
			rgba: 1, 1, 1, 1
		RoundedRectangle:
			#size: self.rec_x - self.border_width*2 , self.size[1] -self.border_width*2
			size: self.size[0] - self.border_width*2 , self.size[1] -self.border_width*2
			
			#pos: self.rec_px + self.border_width/2, self.pos[1] + self.border_width/2
			pos: self.pos[0] + self.border_width/2, self.pos[1] + self.border_width/2
			
			texture: Gradient.horizontal(get_color_from_hex(self.gr_left),get_color_from_hex(self.gr_middle),  get_color_from_hex(self.gr_right))
			
			radius: [self.size[1]/2,self.size[1]/2,self.size[1]/2,self.size[1]/2]
		
		Color: 
			rgba: self.underline_color
		Line:
			width: self.underline_width
			#points: (self.pos[0] + 20, self.pos[1]+4, self.pos[0]+self.size[0]-20, self.pos[1]+4)
			points: (self.start_x, self.pos[1] + self.line_h, self.end_x, self.pos[1] + self.line_h)
		Rectangle:

			size: root.sz_x, root.sz_y   ###### this is the icon size        ### also this 64
			pos: self.pos[0] - self.icon_offset, self.pos[1] + (self.size[1]- root.sz_y)/2
			source: self.icon_source if hasattr(self, 'icon_source') else ''
			source: self.icon_source
		 
		Color:
			rgba: self.border_color

		Line:
			width: self.border_width
			points: (self.pos[0]+ self.size[1]/2, self.pos[1], self.pos[0] + self.size[0] - self.size[1]/2, self.pos[1])

		Line:
			width: self.border_width
			circle: (self.pos[0]+ self.size[1]/2, self.pos[1]+ self.size[1]/2, self.size[1]/2, 0, -180 )

		Line:
			width: self.border_width
			points: (self.pos[0]+ self.size[1]/2, self.pos[1] + self.size[1], self.pos[0] + self.size[0] - self.size[1]/2, self.pos[1] + self.size[1])

		Line:
			width: self.border_width
			circle: (self.pos[0] + self.size[0] - self.size[1]/2, self.pos[1]+ self.size[1]/2, self.size[1]/2, 0, 180 )


