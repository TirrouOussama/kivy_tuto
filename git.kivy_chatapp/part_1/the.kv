<welcomescreen>

	canvas.before:
		Color:
			rgba: 1, 1, 1, 1

		Rectangle:
			size: root.size


	Label:
		color: 0, 0, 0, 1
		text: 'Welcome to chatapp'
		size: root.width*0.2, root.height*0.05
		pos: root.width*0.4, root.height*0.9
		font_size: root.height*0.04
		font_name: '1.ttf'


	TextInput:
		id: user_id
		size: root.width*0.2, root.height*0.05
		pos: root.width*0.4, root.height*0.6
		hint_text: ' Enter username'
		halign: 'center'
		font_name: '1.ttf'

	TextInput:
		id: ip_id
		size: root.width*0.2, root.height*0.05
		pos: root.width*0.4, root.height*0.5
		hint_text: ' Enter username'
		halign: 'center'
		font_name: '1.ttf'

	TextInput:
		id: port_id
		size: root.width*0.2, root.height*0.05
		pos: root.width*0.4, root.height*0.4
		hint_text: ' Enter username'
		halign: 'center'
		font_name: '1.ttf'


	Button:
		text: 'connect'
		size: root.width*0.2, root.height*0.05
		pos: root.width*0.4, root.height*0.3
		on_press: root.initiate()


