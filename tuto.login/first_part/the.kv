<fscreen>

	canvas.before:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			size: root.width, root.height
			pos: 0, 0

	TextInput:
		id: username_id
		hint_text : 'Enter Username'
		size: root.width*0.8, root.height*0.05
		pos: root.width*0.1, root.height*0.7
		halign: 'center'
		multiline: False

	TextInput:
		id: password_id
		hint_text : 'Enter Password'
		size: root.width*0.8, root.height*0.05
		pos: root.width*0.1, root.height*0.6
		halign: 'center'
		password: True
		multiline: False


	Button:
		text: ' Login'
		size: root.width*0.8, root.height*0.05
		pos: root.width*0.1, root.height*0.525
		on_press: root.btn_login()

